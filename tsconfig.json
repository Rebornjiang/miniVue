{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES5",
    "module": "ESNext",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "removeComments": false,
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "moduleResolution": "node",


    "paths": {
      "@type/*": ["typescript/*"],
      "@": ["src"]
    }
  },
  "include": ["src", "typescript", "examples"]
}
